generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model events {
  id          Int     @id @default(autoincrement())
  description String? @db.Text
  label_id    Int?
  z_index     Int?
  title       String  @db.VarChar(50)
  created_by  Int
  start_date  String  @default("0") @db.VarChar(50)
  end_date    String  @default("0") @db.VarChar(50)
}

model groups {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(50)
}

model label {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(50)
  color String @db.VarChar(50)
}

model messages {
  id         Int      @id @default(autoincrement())
  content    String   @db.Text
  created_at DateTime @default(now()) @map("created at") @db.Timestamp(0)
  created_by String   @map("created by") @db.VarChar(50)
}

model roles {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(50)
}

model users {
  id       Int     @id @default(autoincrement())
  username String  @db.VarChar(50)
  email    String  @db.VarChar(50)
  password String  @db.VarChar(50)
  role_id  Int
  group_id String? @db.Text

  @@unique([email, username], map: "Index 2")
}
